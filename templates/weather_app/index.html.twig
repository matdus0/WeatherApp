{% extends 'base.html.twig' %}

{% block title %}Hello WeatherAppController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>WeatherApp</h1>

    <div class="border-2 content-center mt-56 text-center w-72">
    <div class="mt-4 text-xl text-gray-500"> {{ city }}</div>
    <div> Temperature: {{ temp }} °C</div>
        <div> Feels like: {{ feelsLike }} °C</div>
            <div> Weather conditions: {{ clouds }} </div>
                <div> pressure: {{ pressure }}</div>
                    <div> Sunrise: {{ sunrise|date('H:i:s') }}</div>
                        <div> Sunset: {{ sunset|date('H:i:s') }}</div>
    </div>

</div>
{% endblock %}
